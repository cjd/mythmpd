VERSION = 0.5

dist:
	svn export . /tmp/mythmpd
	cd /tmp/ &&  tar -jcvf mythmpd-$(VERSION).tar.bz2 mythmpd
	rm -rf /tmp/mythmpd
	mv /tmp/mythmpd-$(VERSION).tar.bz2 .

publish-mackers.com: dist
	scp `ls -1t mythmpd-$(VERSION).tar.bz2 | head -1` mackers.com:/var/www/hosts/www.mackers.com/htdocs/projects/mythmpd/releases/
	scp `ls -1t mythmpd-$(VERSION).tar.bz2 | head -1` boris:/var/www/hosts/www.mackers.com/htdocs/projects/mythmpd/releases/

